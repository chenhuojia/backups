        $book=self::checkCommon2($data,0,$user_id);       
        $book_number=$data['book_number'];
        $book_name=$data['book_name'];
        $cover_img=$book['cover_img'];
        $cover_explain=$book['cover_explain'];
        $author=$data['author'];
        //self::checkBook($book_number,2,$user_id);
