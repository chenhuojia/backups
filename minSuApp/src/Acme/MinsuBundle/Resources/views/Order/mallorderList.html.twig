{% extends 'AcmeMinsuBundle::mainLayout.html.twig' %}

{% block javascript %} {{ parent() }}
<script src="{{ asset('bundles/msk/public/js/jquery.min.js') }}"></script>
<script type="text/javascript">
$(document).ready(function(){
// alert(123);
$(".stateBtn").click(function(){
	$("[name='isOwner']").val($(this).attr("val"));
	$("form").submit();
})

	$(".input-sm").change(function(){
	   var value=$(this).val();
	   var name =$(this).attr('name');
	   if(value!=""){
	   		window.location="{{ path('_mall_order_list')}}?state="+name+"&val="+value;
	   }
		 
	})
})
$(document).ready(function () {
	$(".page-dis [href]").each(function () {
		if (this.href == window.location.href) {
			$(this).addClass("active");
		}
	})
});
</script>
<style>
	.input-sm{margin-top:20px;}
</style>
{% endblock %}
{% block stylesheet %} {{ parent() }}
	<link href="{{ asset('bundles/msk/public/css/user.css') }}" rel="stylesheet" type="text/css" media="all"/>
{% endblock %}
{% block content%}<section class="alert">
	<button class="green" style="cursor:pointer;" onclick="location='{{ path('_mall_order_list') }}'">全部订单</button>
	<form method="post" action="">			
				<select name="order_status" class="input-sm" style="width:100px;margin-left:220px">
                    	<option value="">订单状态</option>
                        <option value="1">未确认</option>
						<option value="2">已确认</option>
						<option value="3">未评价</option>
						<option value="4">已评价</option>
						<option value="5">已取消</option>
						<option value="6">已完成</option>
                </select>	
                <select name="pay_status" class="input-sm" style="width:100px;">
                        <option value="">支付状态</option>
                        <option value="1">未支付</option>
	            		<option value="2">已支付</option>
	            		<option value="3">退款中</option>
	            		<option value="4">已退款</option>
                </select>
                <select name="pay_code" class="input-sm" style="width:100px;">
                    	<option value="">支付方式</option>
                        <option value="alipay">支付宝支付</option>
						<option value="weixin">微信支付</option>
						<option value="cod">货到付款</option>
                </select>
                <select name="shipping_status" class="input-sm" style="width:100px;">
                    	<option value="">发货状态</option>
                        <option value="1">未发货</option>
						<option value="2">已发货</option>
						<option value="3">已收货</option>
						<option value="4">退货中</option>
						<option value="5">已退货</option>
                </select>
	        <input type="text" class='searchText'  name="searchText" placeholder="  搜  索">
			<select class="searchSelect" name="searchType" >
				<option value="order_sn">订单号</option>
				<option value="shop_name">店铺名</option>
				<option value="consignee">收货人</option>
			</select>
		<input class="green searchbuttoninput" type="button" value="筛选">
	</form>
</section>
<section class="content">
	<section class="widget">
		<header>
			<span class="icon homstay-detail"><span>&#128196;</span></span>
			<hgroup>
				<h1>订单信息</h1>
			</hgroup>
		</header>
		<div class="content">
			<table id="myTable" border="0" width="100">
				<thead>
					<tr>
						<th>订单号</th>											
						<th>店铺名</th>												
						<th>收货人</th>
						<th>订单总价</th>
						<th>实际付款金额</th>
						<th>订单状态</th>
						<th>支付状态</th>
						<th>支付方式</th>
						<th>发货状态</th>
						<th>下单时间</th>	
						<th>操作</th>
					</tr>
				</thead>
					<tbody>
					{% for v in oList %}
						<tr>
						 	<td style="padding-left: 50px;">{{ v.order_sn }}</td>												
							<td>{{ v.shop_name }}</td>
							<td>{{ v.consignee }}  {{ v.mobile }}</td>
							<td>{{ v.total_amount }}</td>
							<td><font style="font: bold 12px/20px Verdana; color: #C00;">{{ v.order_amount }}</font></td>
							
							<td><font color="#36C">
							{% if v.order_status ==1  %}未确认{% endif  %}
							{% if v.order_status ==2  %}已确认{% endif  %}
							{% if v.order_status ==3  %}未评价{% endif  %}
							{% if v.order_status ==4  %}已评价{% endif  %}
							{% if v.order_status ==5  %}已失效{% endif  %}
							{% if v.order_status ==6  %}已取消{% endif  %}
							</font>
							</td>
							<td><font color="#36C">
								{% if v.order_status ==5  %}
									已失效
								{% else %}
									{% if v.pay_status ==1  %}未支付{% endif  %}
									{% if v.pay_status ==2  %}已支付{% endif  %}
									{% if v.pay_status ==3  %}退款中{% endif  %}
									{% if v.pay_status ==4  %}已退款{% endif  %}
								{% endif  %}
								</font>
							</td>
							<td>{{ v.pay_name }}</td>
							<td><font color="#36C">
								{% if v.order_status ==5  %}
									已失效
								{% else %}
									{% if v.shipping_status ==1  %}未发货{% endif  %}
									{% if v.shipping_status ==2  %}已发货{% endif  %}
									{% if v.shipping_status ==3  %}已收货{% endif  %}
									{% if v.shipping_status ==4  %}退货中{% endif  %}
									{% if v.shipping_status ==5  %}已退货{% endif  %}
								{% endif  %}
								</font>
							</td>
							<td>{{ v.NewAddTime }}</td>	 
							<td>	
								<button class="green"  onclick="location='{{ path('_mall_order_detail',{order_sn:v.order_sn}) }}'">详情</button>
								<button class="green"  onclick="del({{v.order_id}})">删除</button>
							</td>
						</tr>
				{% endfor %}
					</tbody>
				</table>
		</div>
	</section>
	{% autoescape false %}
		{{page}}
	{% endautoescape %}
</section>
<script type="text/javascript">

	function agree(obj,order_id){
		$.ajax({
			url:"{{ path('_agreerefund')}}",
			type:"post",
			data:"order_id="+order_id,
			datatype:"json",
			success:function(e){
				if(e>0){
					history.go(0)
				}	
			}
		})
	}

	function unagree(obj,order_id){
		$.ajax({
			url:"{{ path('_unagreerefund')}}",
			type:"post",
			data:"order_id="+order_id,
			datatype:"json",
			success:function(e){
				if(e>0){
					history.go(0)
				}	
			}
		})
	}
	
	function del(order_id){
		$.ajax({
			url:"{{ path('_delmallorder')}}",
			type:"post",
			data:"order_id="+order_id,
			datatype:"json",
			success:function(e){
				if(e>0){
					history.go(0)
				}	
			}
		})
	}
	
	$('.searchbuttoninput').click(function(){
		var condition=$(this).siblings('.searchSelect').val();
		var value=$(this).siblings('.searchText').val();
		  if(value.length>0){
		  	location="{{path('_mall_order_list')}}?"+'condition='+condition+"&value="+value;
		  }
	
	})
	
</script>
{% endblock%}
